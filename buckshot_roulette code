    void phone() // 6
    {
        int rand_num;
        while (true)
        {
            rand_num = rand() % rand_count;
            if (char_turn == 'p' && rand_count - bullet_count == 1)
            {
                cout << "안타깝게... 됐군..." << endl << endl;
                Sleep(1000);
                return;
            }
            if (char_turn == 'd' && rand_count - bullet_count == 1)
            {
                return;
            }
            if (rand_num < bullet_count)
                continue;
            else if (rand_num > bullet_count)
                break;
        }

        int count = 0;

        if (adrenaline_use == 0)
        {
            for (int i = 0; i < 8; i++)
            {
                if (dealerITEM[i] == 6)
                {
                    cout << "당신은 딜러의 대포폰를 훔쳐서 사용했습니다." << endl << endl;
                    Sleep(1000);
                    cout << "랜덤한 곳에 있는 총알을 알려줍니다" << endl << endl;
                    Sleep(1000);
                    cout << rand_num - 1 << "번째 총알은 ";
                    if (bullet[rand_num] == 0)
                        cout << "공탄입니다." << endl << endl;
                    else if (bullet[rand_num] == 1)
                        cout << "실탄입니다." << endl << endl;

                    dealerITEM[i] = 0;
                    break;
                }
                else
                    count++;
            }
            if (count == 8)
                cout << "딜러가 지금 대포폰를 가지고 있지 않습니다" << endl << endl;
            Sleep(1000);
            return;
        }

        if (adrenaline_use == 1)
        {
            for (int i = 0; i < 8; i++)
            {
                if (playerITEM[i] == 5)
                {
                    cout << "딜러가 아드레날린을 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "딜러가 당신이 가진 아이템중 하나를 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "딜러가 당신의 대포폰를 훔쳐서 사용했습니다." << endl << endl;
                    Sleep(1000);
                    cout << "랜덤한 곳에 있는 총알을 알려줍니다" << endl << endl;
                    Sleep(1000);
                    if (bullet[rand_num] == 0)
                    {
                        dealer_phone[0] = rand_num - 1;
                        dealer_phone[1] = 0;
                    }
                    if (bullet[rand_num] == 1)
                    {
                        dealer_phone[0] = rand_num - 1;
                        dealer_phone[1] = 1;
                    }
                    playerITEM[i] = 0;
                    break;
                }
            }
            return;
        }

        if (char_turn == 'p')
        {
            for (int i = 0; i < 8; i++)
            {
                if (playerITEM[i] == 6)
                {
                    cout << "당신은 대포폰를 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "랜덤한 곳에 있는 총알을 알려줍니다" << endl << endl;
                    Sleep(1000);
                    cout << rand_num + 1 << "번째 총알은 ";
                    if (bullet[rand_num] == 0)
                        cout << "공탄입니다." << endl << endl;
                    else if (bullet[rand_num] == 1)
                        cout << "실탄입니다." << endl << endl;

                    playerITEM[i] = 0;
                    break;
                }
                else
                    count++;
            }
            if (count == 8)
                cout << "당신은 지금 대포폰를 가지고 있지 않습니다" << endl << endl;
            Sleep(1000);
            return;
        }
        else if (char_turn == 'd')
        {
            for (int i = 0; i < 8; i++)
            {
                if (dealerITEM[i] == 6)
                {
                    cout << "딜러가 대포폰를 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "랜덤한 곳에 있는 총알을 알려줍니다" << endl << endl;
                    Sleep(1000);
                    if (bullet[rand_num] == 0)
                    {
                        dealer_phone[0] = rand_num - 1;
                        dealer_phone[1] = 0;
                    }
                    if (bullet[rand_num] == 1)
                    {
                        dealer_phone[0] = rand_num - 1;
                        dealer_phone[1] = 1;
                    }
                    dealerITEM[i] = 0;
                    break;
                }
            }
        }
    }

