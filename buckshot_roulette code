#include <iostream>
#include <random>
#include <windows.h>

using namespace std;

class game
{
    int bullet[8];
    int int_turn;
    int dealer;
    int bullet_count = 0;
    int rand_count = 0;
public:
    int playerHP = 6;
    int dealerHP = 6;
    int reset_c = 0;
    char char_turn = 'p';
    int end_game = 0;
    int damage = 1;
    int dealerITEM[8] = { 0 };
    int playerITEM[8] = { 0 };
    int dealer_phone[2];
    int chain_c = 0;
    int itemre = 1;
    int dealer_glass;
    int dealer_chain;
    int dealer_med_ad = 0;
    int adrenaline_use = -1;
    game()
    {
        reset();
    }

    void reset()
    {
        bullet[8] = { 0 };
        rand_count = 0;
        bullet_count = 0;

        int empty_bullet = 0;
        int full_bullet = 0;
        while (rand_count < 3)
        {
            rand_count = rand() % 10;
        }
        for (int i = 0; i < rand_count; i++)
        {
            bullet[i] = rand() % 2;
        }

        for (auto i : bullet)
        {
            if (i == 1)
                full_bullet++;
            if (i == 0)
                empty_bullet++;
        }

        if (full_bullet < 1 || empty_bullet < 1)
            reset();
        int_turn = bullet[bullet_count];
        char_turn = 'p';
        reset_c = 1;
    }

    void bullet_c()
    {
        bullet_count++;
        int_turn = bullet[bullet_count];
        if (int_turn != 1 && int_turn != 0)
            reset();
    }

    void shot()
    {
        if (char_turn == 'p')
        {
            cout << endl << "당신은 딜러를 쏘았습니다." << endl;
            Sleep(2000);
            if (int_turn == 1)
            {
                cout << "실탄이였습니다." << endl << endl;
                Sleep(1000);
                cout << "딜러의 체력이 " << damage << " 떨어집니다." << endl << endl;
                dealerHP -= damage;
                char_turn = 'd';
                see_HP();
                bullet_c();
                if (damage == 2)
                    damage = 1;
            }
            else if (int_turn == 0)
            {
                cout << "공탄이였습니다." << endl << endl;
                Sleep(1000);
                char_turn = 'd';
                bullet_c();
                if (damage == 2)
                    damage = 1;
            }
            Sleep(1000);
            if (reset_c != 1)
                if (chain_c == 1)
                {
                    char_turn = 'p';
                    cout << "여전히 당신의 턴입니다." << endl << endl;
                    chain_c = 0;
                }
                else
                    cout << "딜러에게 턴이 넘어갑니다." << endl << endl;

        }
        else if (char_turn == 'd')
        {
            cout << endl << "딜러는 당신을 쏘았습니다." << endl;
            Sleep(2000);
            if (int_turn == 1)
            {
                cout << "실탄이였습니다." << endl << endl;
                Sleep(1000);
                cout << "당신의 체력이 " << damage << " 떨어집니다" << endl << endl;
                playerHP -= damage;
                char_turn = 'p';
                bullet_c();
                see_HP();
                if (damage == 2)
                    damage = 1;
            }
            else if (int_turn == 0)
            {
                cout << "공탄이였습니다." << endl << endl;
                Sleep(1000);
                char_turn = 'p';
                bullet_c();
                if (damage == 2)
                    damage = 1;
            }
            Sleep(1000);
            if (reset_c != 1)
                if (chain_c == 2)
                {
                    char_turn = 'd';
                    cout << "여전히 딜러의 턴입니다." << endl << endl;
                    chain_c = 0;
                }
                else
                    cout << "당신에게 턴이 넘어갑니다." << endl << endl;
        }
    }

    void self()
    {
        if (char_turn == 'p')
        {
            cout << endl << "당신은 자기 자신을 쏘았습니다." << endl;
            Sleep(2000);
            if (int_turn == 1)
            {
                cout << "실탄이였습니다." << endl << endl;
                Sleep(1000);
                cout << "당신의 체력이 " << damage << " 떨어집니다." << endl << endl;
                Sleep(1000);
                playerHP -= damage;
                char_turn = 'd';
                see_HP();
                bullet_c();
                if (damage == 2)
                    damage = 1;
                if (reset_c != 1)
                {
                    cout << "딜러에게 턴이 넘어갑니다." << endl << endl;
                }
                Sleep(1000);
            }
            else if (int_turn == 0)
            {
                cout << "공탄이였습니다." << endl << endl;
                Sleep(1000);
                bullet_c();
                if (damage == 2)
                    damage = 1;
                if (reset_c != 1)
                    cout << "여전히 당신의 턴 입니다." << endl << endl;
                Sleep(1000);
            }

        }
        else if (char_turn = 'd')
        {
            cout << endl << "딜러는 자기 자신을 쏘았습니다." << endl;
            Sleep(2000);
            if (int_turn == 1)
            {
                cout << "실탄이였습니다." << endl << endl;
                Sleep(1000);
                cout << "딜러의 체력이 " << damage << " 떨어집니다." << endl << endl;
                dealerHP -= damage;
                char_turn = 'p';
                bullet_c();
                see_HP();
                if (damage == 2)
                    damage = 1;
                if (reset_c != 1)
                {
                    cout << "당신에게 턴이 넘어갑니다." << endl << endl;
                }
                Sleep(1000);
            }
            else if (int_turn == 0)
            {
                cout << "공탄이였습니다." << endl << endl;
                Sleep(1000);
                bullet_c();
                if (damage == 2)
                    damage = 1;
                if (reset_c != 1)
                    cout << "여전히 딜러의 턴 입니다." << endl << endl;
                Sleep(500);
            }
        }
    }

    void dealer_turn()
    {
        // 딜러가 돋보기가 있으면 무조건 돋보기 부터 돋보기 사용후 공탄이면 셀프 실탄이면 톱날이나 수갑 있으면 사용후 샷
        // 아드레날린이 있을때 돋보기가 없으면 아드레날린 사용후 돋보기 사용
        // 돋보기 사용후 아드레날린이 있고 수갑이나 톱날이 없으면 아드레날린으로 수갑이나 톱날 사용
        // 대포폰은 있으면 먼저 사용하고 대포폰에 맞는 곳에 따라 아이템및 상황에 맞게
        // 피가 2이상 닳아있거나 1이상 닳았는데 담배가 없을시 상한약 사용
        // 돋보기나 아드레날린 대포폰이 없거나 돋보기를 사용했는데 공탄일시 변환기 사용하여 톱날이나 수갑사용후 샷
        char_turn = 'd';
        dealer_chain = 0;
        dealer_glass = 0;
        int full_bullet = 0;
        int empty_bullet = 0;
        for (int i = bullet_count; i < 8; i++)
        {
            if (bullet[i] == 1)
                full_bullet++;
            if (bullet[i] == 0)
                empty_bullet++;
        }

        phone();

        if (bullet_count == dealer_phone[0])
        {
            if (int_turn == dealer_phone[1] == 0)
            {
                self();
                return;
            }
            else if (int_turn == dealer_phone[1] == 1)
            {
                saw();
                chain();
                if (damage != 2 || chain_c != 2)
                {
                    adrenaline();
                }

                shot();
                return;
            }
        }

        tabaco();

        if (dealerHP < 5)
            med();

        if (empty_bullet == 1 && full_bullet == 0) // 공탄 하나일때 무조건 자기자신
        {
            self();
            return;
        }
        if (empty_bullet == 0 && full_bullet == 1) // 공탄 하나일때 무조건 자기자신
        {
            shot();
            return;
        }

        glass();

        if (dealer_glass == 0)
        {
            adrenaline();
        }

        if (dealer_glass == 1)
        {
            saw();
            chain();
            if (damage != 2 || chain_c != 2)
            {
                adrenaline();
            }

            shot();
            return;
        }

        else if (dealer_glass == 2)
        {
            inverter();
            if (int_turn == 1)
            {
                saw();
                chain();
                if (damage != 2 || chain_c != 2)
                {
                    adrenaline();
                }
                shot();
                return;
            }

            if (int_turn == 0)
            {
                adrenaline();
            }
            beer();
            self();
            return;
        }

        chain();

        if (dealer_chain == 1)
        {
            shot();
            return;
        }

        beer();

        if (full_bullet < empty_bullet && dealer_glass == 0 && dealer_chain == 0)
            self();
        else if (full_bullet > empty_bullet && dealer_glass == 0 && dealer_chain == 0)
            shot();
        else if (full_bullet == empty_bullet && dealer_glass == 0 && dealer_chain == 0)
            self();

    }

    void bullet_see()
    {
        int empty_bullet = 0;
        int full_bullet = 0;
        cout << "bullet : ";
        for (auto i : bullet)
        {
            if (i == 1)
                full_bullet++;
            if (i == 0)
                empty_bullet++;
        }
        for (auto i : bullet)
        {
            while (full_bullet != 0)
            {
                cout << "●" << " ";
                full_bullet--;
                Sleep(250);
            }

            while (empty_bullet != 0)
            {
                cout << "○" << " ";
                empty_bullet--;
                Sleep(250);
            }
        }


        cout << endl;
        Sleep(1000);
    }

    void see_HP()
    {
        cout << "player HP : ";
        for (int i = 0; i < playerHP; i++)
        {
            cout << "■" << " ";
            Sleep(250);
        }
        Sleep(500);
        cout << "  dealer HP : ";
        for (int i = 0; i < dealerHP; i++)
        {
            cout << "■" << " ";
            Sleep(250);
        }
        cout << endl;

        if (playerHP == 0)
            end_game = 1;
        if (dealerHP == 0)
            end_game = 2;
    }

    void item()
    {
        int clear = 0;
        Sleep(500);
        cout << "아이템을 지급합니다" << endl << endl;

        if (itemre == 1)
        {
            while (clear != 4)
            {
                for (int i = 0; i < 4; i++)
                {
                    dealerITEM[i] = rand() % 10;
                    playerITEM[i] = rand() % 10;

                    if (dealerITEM[i] != 0 && playerITEM[i] != 0)
                        clear++;
                    else
                    {
                        clear = 0;
                        break;
                    }
                }
                if (clear == 0)
                    continue;

            }
        }

        if (itemre == 2)
        {
            int count = 0;
            clear = 0;
            for (int i = 0; i < 8; i++)
            {
                if (playerITEM[i] != 0)
                    count++;
            }

            while (clear != 4)
            {
                for (int i = count; i < count + 4; i++)
                {
                    playerITEM[i] = rand() % 10;

                    if (playerITEM[i] != 0)
                        clear++;
                    else
                    {
                        clear = 0;
                        break;
                    }
                }
                if (clear == 0)
                    continue;

            }
            clear = 0;
            count = 0;
            for (int i = 0; i < 8; i++)
            {
                if (dealerITEM[i] != 0)
                    count++;
            }
            while (clear != 4)
            {
                for (int i = count; i < count + 4; i++)
                {
                    dealerITEM[i] = rand() % 10;

                    if (dealerITEM[i] != 0)
                        clear++;
                    else
                    {
                        clear = 0;
                        break;
                    }
                }
                if (clear == 0)
                    continue;
            }
        }
        item_see();
    }

    void item_see()
    {
        cout << "ITEM : ";
        for (auto i : playerITEM)
        {
            if (i == 1)
            {
                cout << "돋보기( 1 ) ";
                Sleep(300);
            }
            if (i == 2)
            {
                cout << "톱날( 2 ) ";
                Sleep(300);
            }
            if (i == 3)
            {
                cout << "담배( 3 ) ";
                Sleep(300);
            }
            if (i == 4)
            {
                cout << "수갑( 4 ) ";
                Sleep(300);
            }
            if (i == 5)
            {
                cout << "맥주( 5 ) ";
                Sleep(300);
            }
            if (i == 6)
            {
                cout << "대포폰( 6 ) ";
                Sleep(300);
            }
            if (i == 7)
            {
                cout << "변환기( 7 ) ";
                Sleep(300);
            }
            if (i == 8)
            {
                cout << "아드레날린( 8 ) ";
                Sleep(300);
            }
            if (i == 9)
            {
                cout << "상한 약( 9 ) ";
                Sleep(300);
            }
        }
        cout << endl << "dealerITEM : ";
        for (auto i : dealerITEM)
        {
            if (i == 1)
            {
                cout << "돋보기( 1 ) ";
                Sleep(300);
            }
            if (i == 2)
            {
                cout << "톱날( 2 ) ";
                Sleep(300);
            }
            if (i == 3)
            {
                cout << "담배( 3 ) ";
                Sleep(300);
            }
            if (i == 4)
            {
                cout << "수갑( 4 ) ";
                Sleep(300);
            }
            if (i == 5)
            {
                cout << "맥주( 5 ) ";
                Sleep(300);
            }
            if (i == 6)
            {
                cout << "대포폰( 6 ) ";
                Sleep(300);
            }
            if (i == 7)
            {
                cout << "변환기( 7 ) ";
                Sleep(300);
            }
            if (i == 8)
            {
                cout << "아드레날린( 8 ) ";
                Sleep(300);
            }
            if (i == 9)
            {
                cout << "상한 약( 9 ) ";
                Sleep(300);
            }
        }
        cout << endl << endl;
    }

    void glass() // 1
    {
        int count = 0;

        if (adrenaline_use == 0)
        {
            for (int i = 0; i < 8; i++)
            {
                if (dealerITEM[i] == 1)
                {
                    cout << "당신은 딜러의 돋보기를 훔쳐서 사용했습니다" << endl << endl;
                    Sleep(1000);
                    cout << "지금 장전 되어있는 탄을 보여줍니다." << endl << endl;
                    Sleep(1000);
                    if (int_turn == 1)
                        cout << "실탄이 장전되어 있습니다." << endl << endl;
                    if (int_turn == 0)
                        cout << "공탄이 장전되어 있습니다." << endl << endl;
                    dealerITEM[i] = 0;
                    break;
                }
                else
                    count++;
            }
            if (count == 8)
                cout << "딜러가 지금 돋보기를 가지고 있지 않습니다" << endl << endl;
            Sleep(1000);
            return;
        }

        if (adrenaline_use == 1)
        {
            for (int i = 0; i < 8; i++)
            {
                if (playerITEM[i] == 1)
                {
                    cout << "딜러가 아드레날린을 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "딜러가 당신이 가진 아이템중 하나를 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "딜러가 당신의 돋보기를 훔쳐서 사용했습니다" << endl << endl;
                    Sleep(1000);
                    cout << "지금 장전 되어있는 탄을 보여줍니다." << endl << endl;
                    Sleep(1000);
                    if (int_turn == 1)
                    {
                        dealer_glass = 1;
                    }
                    else if (int_turn == 0)
                    {
                        dealer_glass = 2;
                    }
                    playerITEM[i] = 0;
                    return;
                }
            }
        }

        if (char_turn == 'p')
        {
            for (int i = 0; i < 8; i++)
            {
                if (playerITEM[i] == 1)
                {
                    cout << "당신은 돋보기를 사용하였습니다." << endl << endl;
                    Sleep(1000);
                    cout << "지금 장전 되어있는 탄을 보여줍니다." << endl << endl;
                    Sleep(1000);
                    if (int_turn == 1)
                        cout << "실탄이 장전되어 있습니다." << endl << endl;
                    if (int_turn == 0)
                        cout << "공탄이 장전되어 있습니다." << endl << endl;
                    playerITEM[i] = 0;
                    return;
                }
                else
                    count++;
            }

            if (count == 8)
                cout << "당신은 지금 돋보기를 가지고 있지 않습니다" << endl << endl;
            Sleep(1000);
            return;
        }


        if (char_turn == 'd')
        {
            for (int i = 0; i < 8; i++)
            {
                if (dealerITEM[i] == 1)
                {
                    dealerITEM[i] = 0;
                    cout << "딜러가 돋보기를 사용하였습니다." << endl << endl;
                    Sleep(1000);
                    cout << "지금 장전 되어있는 탄을 보여줍니다." << endl << endl;
                    Sleep(1000);
                    if (int_turn == 1)
                    {
                        dealer_glass = 1;
                        break;
                    }
                    else if (int_turn == 0)
                    {
                        dealer_glass = 2;
                        break;
                    }
                }
            }
            return;
        }
    }

    void saw() // 2
    {
        int count = 0;

        if (adrenaline_use == 0)
        {
            for (int i = 0; i < 8; i++)
            {
                if (dealerITEM[i] == 2)
                {
                    cout << "당신은 딜러의 톱날을 훔쳐서 사용했습니다" << endl << endl;
                    Sleep(1000);
                    cout << "다음 탄의 데미지가 2가 됩니다" << endl << endl;
                    Sleep(1000);
                    damage = 2;
                    dealerITEM[i] = 0;
                    return;
                }
                else
                    count++;
            }
            if (count == 8)
                cout << "딜러가 지금 톱날을 가지고 있지 않습니다" << endl << endl;
            Sleep(1000);
            return;
        }

        if (adrenaline_use == 1)
        {
            for (int i = 0; i < 8; i++)
            {
                if (playerITEM[i] == 2)
                {
                    cout << "딜러가 아드레날린을 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "딜러가 당신이 가진 아이템중 하나를 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "딜러가 당신의 톱날을 훔쳐서 사용했습니다" << endl << endl;
                    Sleep(1000);
                    cout << "다음 탄의 데미지가 2가 됩니다" << endl << endl;
                    Sleep(1000);
                    damage = 2;
                    playerITEM[i] = 0;
                    return;
                }
            }
            return;
        }

        if (char_turn == 'p')
        {
            for (int i = 0; i < 8; i++)
            {
                if (playerITEM[i] == 2)
                {
                    cout << "당신은 톱날을 사용하였습니다" << endl << endl;
                    Sleep(1000);
                    cout << "다음 탄의 데미지가 2가 됩니다" << endl << endl;
                    Sleep(1000);
                    damage = 2;
                    playerITEM[i] = 0;
                    return;
                }
                else count++;
            }
            if (count == 8)
                cout << "당신은 지금 톱날을 가지고 있지 않습니다" << endl << endl;
            Sleep(1000);
            return;
        }
        if (char_turn == 'd')
        {
            for (int i = 0; i < 8; i++)
            {
                if (dealerITEM[i] == 2)
                {
                    cout << "딜러가 톱날을 사용하였습니다" << endl << endl;
                    Sleep(1000);
                    cout << "다음 탄의 데미지가 2가 됩니다" << endl << endl;
                    Sleep(1000);
                    damage = 2;
                    dealerITEM[i] = 0;
                    return;
                }
            }
            return;
        }
    }

    void tabaco() // 3
    {
        int count = 0;

        if (adrenaline_use == 0)
        {
            for (int i = 0; i < 8; i++)
            {
                if (dealerITEM[i] == 3)
                {
                    cout << "당신은 딜러의 담배를 훔쳐서 피었습니다." << endl << endl;
                    Sleep(1000);
                    cout << "당신의 체력이 1 회복됩니다." << endl << endl;
                    Sleep(1000);
                    if (playerHP == 6)
                    {
                        cout << "당신의 체력은 이미 꽉 차있습니다." << endl << endl;
                        return;
                    }
                    else
                    {
                        playerHP++;
                        dealerITEM[i] = 0;
                        return;
                    }
                }
                else
                    count++;
            }
            if (count == 8)
                cout << "딜러가 지금 담배를 가지고 있지 않습니다" << endl << endl;
            Sleep(1000);
            return;
        }

        if (adrenaline_use == 1)
        {
            for (int i = 0; i < 8; i++)
            {
                if (playerITEM[i] == 3)
                {
                    cout << "딜러가 아드레날린을 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "딜러가 당신이 가진 아이템중 하나를 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "딜러가 당신의 담배를 훔쳐서 피었습니다." << endl << endl;
                    Sleep(1000);
                    cout << "딜러의 체력이 1 회복됩니다." << endl << endl;
                    Sleep(1000);
                    dealerHP++;
                    playerITEM[i] = 0;
                    return;
                }
            }
            dealer_med_ad = 1;
            return;
        }

        if (char_turn == 'p')
        {
            for (int i = 0; i < 8; i++)
            {
                if (playerITEM[i] == 3)
                {
                    cout << "당신은 담배를 피었습니다." << endl << endl;
                    Sleep(1000);
                    cout << "당신의 체력이 1 회복됩니다." << endl << endl;
                    Sleep(1000);
                    if (playerHP == 6)
                    {
                        cout << "당신의 체력은 이미 꽉 차있습니다." << endl << endl;
                        return;
                    }
                    else
                    {
                        playerHP++;
                        playerITEM[i] = 0;
                        return;
                    }
                }
                else
                    count++;
            }
            if (count == 8)
                cout << "당신은 지금 담배를 가지고 있지 않습니다" << endl << endl;
            Sleep(1000);
            return;
        }
        if (char_turn == 'd')
        {
            if (dealerHP >= 6)
                return;
            for (int i = 0; i < 8; i++)
            {
                if (dealerITEM[i] == 3)
                {
                    cout << "딜러가 담배를 피었습니다." << endl << endl;
                    Sleep(1000);
                    cout << "딜러의 체력이 1 회복됩니다." << endl << endl;
                    Sleep(1000);
                    dealerHP++;
                    dealerITEM[i] = 0;
                    return;
                }
            }
            adrenaline();
            dealer_med_ad = 1;
            return;
        }
    }

