    void adrenaline() // 8
    {
        int item_select;
        bool select = true;
        if (char_turn == 'p')
        {
            item_select = 0;
            adrenaline_use = 0;
            for (int i = 0; i < 8; i++)
            {
                if (playerITEM[i] == 8)
                {
                    cout << "당신은 아드레날린을 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "상대방의 아이템중 하나를 가져옵니다." << endl << endl;
                    Sleep(1000);

                    cout << "dealerITEM : ";
                    for (auto i : dealerITEM)
                    {
                        if (i == 1)
                        {
                            cout << "돋보기( 1 ) ";
                            Sleep(300);
                        }
                        if (i == 2)
                        {
                            cout << "톱날( 2 ) ";
                            Sleep(300);
                        }
                        if (i == 3)
                        {
                            cout << "담배( 3 ) ";
                            Sleep(300);
                        }
                        if (i == 4)
                        {
                            cout << "수갑( 4 ) ";
                            Sleep(300);
                        }
                        if (i == 5)
                        {
                            cout << "맥주( 5 ) ";
                            Sleep(300);
                        }
                        if (i == 6)
                        {
                            cout << "대포폰( 6 ) ";
                            Sleep(300);
                        }
                        if (i == 7)
                        {
                            cout << "변환기( 7 ) ";
                            Sleep(300);
                        }
                        if (i == 8)
                        {
                            cout << "아드레날린( 8 ) ";
                            Sleep(300);
                        }
                        if (i == 9)
                        {
                            cout << "상한 약( 9 ) ";
                            Sleep(300);
                        }
                    }
                    cout << "선택 : ";

                    while (select)
                    {
                        cin >> item_select;
                        int count = 0;
                        switch (item_select)
                        {
                        case 1:
                            select = false;
                            glass();
                            break;
                        case 2:
                            select = false;
                            saw();
                            break;
                        case 3:
                            select = false;
                            tabaco();
                            break;
                        case 4:
                            select = false;
                            chain();
                            break;
                        case 5:
                            select = false;
                            beer();
                            break;
                        case 6:
                            select = false;
                            phone();
                            break;
                        case 7:
                            select = false;
                            inverter();
                            break;
                        case 8:
                            select = false;
                            adrenaline();
                            break;
                        case 9:
                            select = false;
                            med();
                            break;
                        }
                    }
                    playerITEM[i] = 0;
                    adrenaline_use = -1;
                    break;
                }
            }
        }
        else if (char_turn == 'd')
        {
            for (int i = 0; i < 8; i++)
            {
                if (dealerITEM[i] == 8)
                {
                    adrenaline_use = 1;

                    if (dealer_med_ad == 1)
                        med();

                    if (dealer_glass == 0)
                        glass();
                    if (chain_c == 2 && damage != 2)
                        saw();
                    if (chain_c != 2 && damage == 2)
                        chain();
                    if (dealer_glass == 2)
                        inverter();

                    adrenaline_use = -1;
                    return;
                }
            }
        }
    }

    void med() // 9
    {
        int medcine = rand() % 2;
        int count = 0;

        if (adrenaline_use == 0)
        {
            for (int i = 0; i < 8; i++)
            {
                if (dealerITEM[i] == 9)
                {
                    cout << "당신은 딜러의 상한약을 훔쳐서 먹었습니다." << endl << endl;
                    Sleep(1000);
                    cout << "체력을 2 회복하거나 1 닳습니다." << endl << endl;
                    Sleep(1000);
                    if (medcine == 1)
                    {
                        if (playerHP + 2 >= 6)
                        {
                            cout << "당신은 행운의 신의 선택을 받았습니다." << endl << "체력이 회복됩니다." << endl << endl;
                            Sleep(1000);
                            playerHP = 6;
                            see_HP();
                            dealerITEM[i] = 0;
                            break;
                        }
                        else
                        {
                            cout << "당신은 행운의 신의 선택을 받았습니다." << endl << "체력이 회복됩니다." << endl << endl;
                            Sleep(1000);
                            playerHP += 2;
                            see_HP();
                            dealerITEM[i] = 0;
                            break;
                        }
                    }
                    else if (medcine == 0)
                    {
                        cout << "당신은 행운의 신의 선택을 받지 못했습니다 체력이 1 떨어집니다." << endl << endl;
                        Sleep(1000);
                        playerHP--;
                        see_HP();
                        dealerITEM[i] = 0;
                        break;
                    }
                }
                else
                    count++;
            }
            if (count == 8)
                cout << "딜러가 지금 상한약를 가지고 있지 않습니다" << endl << endl;
            Sleep(1000);
            return;
        }

        if (adrenaline_use == 1)
        {
            for (int i = 0; i < 8; i++)
            {
                if (playerITEM[i] == 9)
                {
                    cout << "딜러가 아드레날린을 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "딜러가 당신이 가진 아이템중 하나를 사용합니다." << endl << endl;
                    Sleep(1000);
                    cout << "딜러가 당신의 상한약를 훔쳐서 사용했습니다." << endl << endl;
                    Sleep(1000);
                    cout << "체력을 2 회복하거나 1 닳습니다." << endl << endl;
                    Sleep(1000);
                    if (medcine == 1)
                    {
                        if (dealerHP + 2 >= 6)
                        {
                            cout << "딜러가 행운의 신의 선택을 받았습니다." << endl << "체력이 회복됩니다." << endl << endl;
                            Sleep(1000);
                            dealerHP = 6;
                            see_HP();
                            playerITEM[i] = 0;
                            break;
                        }
                        else
                        {
                            cout << "딜러가 행운의 신의 선택을 받았습니다." << endl << "체력이 회복됩니다." << endl << endl;
                            Sleep(1000);
                            dealerHP += 2;
                            see_HP();
                            playerITEM[i] = 0;
                            break;
                        }
                    }
                    else if (medcine == 2)
                    {
                        cout << "딜러는 행운의 신의 선택을 받지 못했습니다 체력이 1 떨어집니다." << endl << endl;
                        Sleep(1000);
                        dealerHP--;
                        see_HP();
                        playerITEM[i] = 0;
                        break;
                    }
                }
            }
            return;
        }

        if (char_turn == 'p')
        {
            for (int i = 0; i < 8; i++)
            {
                if (playerITEM[i] == 9)
                {
                    cout << "당신은 상한약을 먹었습니다." << endl << endl;
                    Sleep(1000);
                    cout << "체력을 2 회복하거나 1 닳습니다." << endl << endl;
                    Sleep(1000);
                    if (medcine == 1)
                    {
                        if (playerHP + 2 >= 6)
                        {
                            cout << "당신은 행운의 신의 선택을 받았습니다." << endl << "체력이 회복됩니다." << endl << endl;
                            Sleep(1000);
                            playerHP = 6;
                            see_HP();
                            playerITEM[i] = 0;
                            break;
                        }
                        else
                        {
                            cout << "당신은 행운의 신의 선택을 받았습니다." << endl << "체력이 회복됩니다." << endl << endl;
                            Sleep(1000);
                            playerHP += 2;
                            see_HP();
                            playerITEM[i] = 0;
                            break;
                        }
                    }
                    else if (medcine == 0)
                    {
                        cout << "당신은 행운의 신의 선택을 받지 못했습니다 체력이 1 떨어집니다." << endl << endl;
                        Sleep(1000);
                        playerHP--;
                        see_HP();
                        playerITEM[i] = 0;
                        break;
                    }
                }
                else
                    count++;
            }
            if (count == 8)
                cout << "딜러가 지금 상한약를 가지고 있지 않습니다" << endl << endl;
            Sleep(1000);
            return;
        }
        if (char_turn == 'd')
        {
            for (int i = 0; i < 8; i++)
            {
                if (dealerITEM[i] == 9)
                {
                    cout << "딜러는 상한약을 먹었습니다." << endl << endl;
                    Sleep(1000);
                    cout << "체력을 2 회복하거나 1 닳습니다." << endl << endl;
                    Sleep(1000);
                    if (medcine == 0)
                    {
                        if (dealerHP + 2 >= 6)
                        {
                            cout << "딜러가 행운의 신의 선택을 받았습니다." << endl << "체력이 회복됩니다." << endl << endl;
                            Sleep(1000);
                            dealerHP = 6;
                            see_HP();
                            dealerITEM[i] = 0;
                            break;
                        }
                        else
                        {
                            cout << "딜러가 행운의 신의 선택을 받았습니다." << endl << "체력이 회복됩니다." << endl << endl;
                            Sleep(1000);
                            dealerHP += 2;
                            see_HP();
                            dealerITEM[i] = 0;
                            break;
                        }
                    }
                    else if (medcine == 1)
                    {
                        cout << "딜러는 행운의 신의 선택을 받지 못했습니다 체력이 1 떨어집니다." << endl << endl;
                        Sleep(1000);
                        dealerHP--;
                        see_HP();
                        dealerITEM[i] = 0;
                        break;
                    }
                }
            }
        }
    }
};

int main()
{
    srand(time(NULL));
    SetConsoleTitle(TEXT("buckshot roulette"));
    game games;
    int choice;
    char select;

    cout << "당신은 아무것도 보이지 않는곳에 앉아있습니다." << endl;
    Sleep(1000);
    cout << "곧 딜러가 들어와 얘기를 합니다." << endl;
    Sleep(1000);
    cout << "\"게임을 시작하지 설명이 필요한가?\"" << endl;
    Sleep(1000);
    cout << "게임의 설명이 필요하다 y or n : ";
    cin >> select;

    if (select == 'y')
    {
        cout << endl <<"알겠다 간단하게 설명해주지" << endl;
        Sleep(1000);
        cout << "이건 러시안 룰렛 같은 게임이다." << endl;
        Sleep(1000);
        cout << "시작하면 총알을 보여준다 공탄과 실탄으로 나뉘어있고," << endl;
        Sleep(1000);
        cout << "너는 자신을 쏠건지 딜러인 나를 쏠껀지 선택할수 있다." << endl;
        Sleep(1000);
        cout << "총을 상대한테 쏘면 턴은 상대에게 넘어간다 수갑을 사용하지 않았을때 말이지" << endl;
        Sleep(1000);
        cout << "그리고 자기 자신을 쏘면 공탄이면 다시 자기 자신의 턴이 된다." << endl;
        Sleep(1000);
        cout << "아이템을 사용하고 싶으면 2번을 눌러 아이템 사용으로 들어가 원하는 아이템의 번호를 누르면 된다." << endl;
        Sleep(1000);
        cout << "아이템의 설명이 필요하면 3번을 눌러라" << endl;
        Sleep(1000);
        cout << "이정도면 설명은 충분한거 같으니 바로 시작하겠다." << endl;
        Sleep(5000);
    }
    
    if (select == 'n')
    {
        cout << endl << "당돌한 녀석이군" << endl;
        Sleep(1000);
        cout << "바로 시작하겠다." << endl;
        Sleep(2000);
        select = 'y';
    }

    system("cls");

    while (select == 'y')
    {
        if (games.end_game == 1)
        {
            system("cls");
            cout << "\"안타깝군 날 이기지 못했군 수고했다." << endl << endl;
            Sleep(1000);
            cout << "당신의 체력이 전부 소신 되었습니다" << endl << endl;
            Sleep(1000);
            cout << "당신이 패배 하였습니다" << endl << endl;
            Sleep(1000);
            cout << "당신은 딜러의 영원한 장난감이 되었습니다" << endl;
            break;
        }

        if (games.end_game == 2)
        {
            system("cls");
            cout << "딜러의 체력이 전부 소진 되었습니다." << endl << endl;
            Sleep(1000);
            cout << "딜러가 패배 하였습니다." << endl << endl;
            Sleep(1000);
            cout << "잘하는군.. 내가 졌다.." << endl << endl;
            Sleep(1000);
            cout << "넌 다시 안전한 집으로 돌아갈수 있다 너의 유흥을 위해서 더 하겠다 안전한 집으로 돌아가겠나" << endl << endl;
            Sleep(1000);
            cout << "계속해서 게임을 하거나 집으로 돌아갈수 있습니다 ( 계속 한다 : y, 돌아간다 : n )";
            cin >> select;
            if (select == 'n')
                break;
            if (select == 'y')
            {
                games.chain_c = 0;
                games.adrenaline_use = -1;
                games.char_turn = 'p';
                games.damage = 1;
                games.itemre = 1;
                games.reset_c = 1;
                games.reset();
                games.dealerHP = 6;
                games.playerHP = 6;
                for (int i = 0; i < 8; i++)
                {
                    games.dealerITEM[i] = 0;
                    games.playerITEM[i] = 0;
                }
                cout << "당신은 한번 더 딜러에게 도전하기로 합니다.";
                Sleep(5000);
                system("cls");
                continue;
            }
        }

        if (games.char_turn == 'p')
        {

            if (games.reset_c == 1)
            {
                games.reset_c = 0;

                games.bullet_see();

                games.see_HP();

                if (games.itemre == 1)
                {
                    games.item();
                    games.itemre = 0;
                }
                else if (games.itemre == 2)
                {
                    games.item();
                    games.itemre = 0;
                }
                else
                    games.item_see();
            }


            cout << "총알을 누구에게 쏘시겠습니까( player : 0, dealer : 1 , item : 2, 아이템 설명 : 3 ) : ";
            cin >> choice;

            if (choice == 1)
                games.shot();
            if (choice == 0)
                games.self();
            if (choice == 2)
                while (true)
                {
                    cout << "아이템 사용 ( 나가기 : 0 ) : ";
                    cin >> choice;

                    if (choice == 1)
                        games.glass();
                    if (choice == 2)
                        games.saw();
                    if (choice == 3)
                        games.tabaco();
                    if (choice == 4)
                        games.chain();
                    if (choice == 5)
                        games.beer();
                    if (choice == 6)
                        games.phone();
                    if (choice == 7)
                        games.inverter();
                    if (choice == 8)
                        games.adrenaline();
                    if (choice == 9)
                        games.med();
                    if (choice == 0)
                        break;

                    games.item_see();
                }
            if (choice == 3)
            {
                cout << "=========================================" << endl;
                cout << "돋보기 : 지금 장전된 탄을 보여줍니다." << endl
                    << "톱날 : 장전된 탄의 데미지가 2가 됩니다." << endl
                    << "담배 : 체력 1을 회복합니다." << endl
                    << "수갑 : 상대의 움직임을 한번 막습니다," << endl
                    << "맥주 : 지금 장전된 탄을 버립니다." << endl
                    << "대포폰 : 랜덤한 곳에 있는 탄환을 알려줍니다." << endl
                    << "변환기 : 지금 장전된 탄환을 바꿉니다 ( 실탄 <=> 공탄)" << endl
                    << "아드레날린 : 상대방의 아이템을 하나 가져와서 사용합니다." << endl
                    << "상한 약 : 체력 2를 회복하거나 1만큼 체력을 잃습니다." << endl << endl;
            }

            choice = NULL;
        }
        if (games.end_game == 1)
        {
            system("cls");
            cout << "\"안타깝군 날 이기지 못했군 수고했다." << endl << endl;
            Sleep(1000);
            cout << "당신의 체력이 전부 소신 되었습니다" << endl << endl;
            Sleep(1000);
            cout << "당신이 패배 하였습니다" << endl << endl;
            Sleep(1000);
            cout << "당신은 딜러의 영원한 장난감이 되었습니다" << endl;
            break;
        }

        if (games.end_game == 2)
        {
            system("cls");
            cout << "딜러의 체력이 전부 소진 되었습니다." << endl << endl;
            Sleep(1000);
            cout << "딜러가 패배 하였습니다." << endl << endl;
            Sleep(1000);
            cout << "잘하는군.. 내가 졌다.." << endl << endl;
            Sleep(1000);
            cout << "넌 다시 안전한 집으로 돌아갈수 있다 너의 유흥을 위해서 더 하겠다 안전한 집으로 돌아가겠나" << endl << endl;
            Sleep(1000);
            cout << "계속해서 게임을 하거나 집으로 돌아갈수 있습니다 ( 계속 한다 : y, 돌아간다 : n )";
            cin >> select;
            if (select == 'n')
                break;
            if (select == 'y')
            {
                games.chain_c = 0;
                games.adrenaline_use = -1;
                games.char_turn = 'p';
                games.damage = 1;
                games.itemre = 1;
                games.reset_c = 1;
                games.reset();
                games.dealerHP = 6;
                games.playerHP = 6;
                for (int i = 0; i < 8; i++)
                {
                    games.dealerITEM[i] = 0;
                    games.playerITEM[i] = 0;
                }
                cout << "당신은 한번 더 딜러에게 도전하기로 합니다.";
                Sleep(5000);
                system("cls");
                continue;
            }
        }
        if (games.char_turn == 'd')
        {
            cout << "딜러의 턴 입니다." << endl;
            games.dealer_turn();
        }
        if (games.reset_c == 1)
        {
            system("cls");
            cout << endl << "재장전 합니다." << endl;
            games.chain_c = 0;
            games.itemre = 2;
            continue;
        }
    }

    cout << endl << "당신은 딜러를 이기고 안전한 집으로 돌아갔습니다." << endl;

}
